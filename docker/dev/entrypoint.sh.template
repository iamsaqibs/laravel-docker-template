#!/bin/bash
set -e

echo "Starting Laravel application setup..."

# Generate SSL certificates if they don't exist
if [ ! -f "/etc/ssl/certs/apache-selfsigned.crt" ]; then
    echo "Generating SSL certificates..."
    mkdir -p /etc/ssl/private /etc/ssl/certs
    openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
        -keyout /etc/ssl/private/apache-selfsigned.key \
        -out /etc/ssl/certs/apache-selfsigned.crt \
        -subj "/C=US/ST=Development/L=Local/O=Laravel Docker/OU=Development/CN=localhost"
    
    # Set proper permissions for SSL files
    chmod 600 /etc/ssl/private/apache-selfsigned.key
    chmod 644 /etc/ssl/certs/apache-selfsigned.crt
    chown root:root /etc/ssl/private/apache-selfsigned.key
    chown root:root /etc/ssl/certs/apache-selfsigned.crt
    echo "SSL certificates generated successfully!"
else
    echo "SSL certificates already exist, skipping generation..."
fi

# Ensure Apache is properly configured for SSL
echo "Configuring Apache for SSL..."
a2enmod ssl rewrite headers expires
a2ensite 000-default

# Wait for MySQL to be ready
echo "Waiting for MySQL to be ready..."
while ! mysql -h mysql -u {{DB_USERNAME}} -p{{DB_PASSWORD}} -e "SELECT 1" >/dev/null 2>&1; do
    echo "MySQL is not ready yet. Waiting..."
    sleep 2
done
echo "MySQL is ready!"

# Navigate to application directory
cd /var/www/html

# Ensure proper permissions
chown -R www-data:www-data storage bootstrap/cache
chmod -R 775 storage bootstrap/cache

# Generate application key if not present
if ! php artisan key:generate --show >/dev/null 2>&1; then
    echo "Generating application key..."
    php artisan key:generate --force
fi

# Clear and cache configurations
echo "Clearing and caching configurations..."
php artisan config:clear
php artisan route:clear
php artisan view:clear

# Run database migrations
echo "Running database migrations..."
php artisan migrate --force

# Clear cache after migrations (now that tables exist)
echo "Clearing cache after migrations..."
php artisan cache:clear || echo "Cache clear failed, continuing..."

# Create storage link if it doesn't exist
if [ ! -L "public/storage" ]; then
    echo "Creating storage link..."
    php artisan storage:link
fi

# Cache configurations for better performance
echo "Caching configurations..."
php artisan config:cache
php artisan route:cache
php artisan view:cache

# Create log directories
mkdir -p /var/log/supervisor
touch /var/log/supervisor/supervisord.log

echo "Laravel application setup completed!"

# Execute the main command
exec "$@" 