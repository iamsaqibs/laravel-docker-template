# Laravel Docker Template Configuration
# This file is used to generate docker-compose.yml and other configuration files
# Edit these values according to your project needs

# Project Configuration
PROJECT_NAME=my_laravel_app
APP_NAME="Laravel App"

# Port Configuration (make sure these ports are available)
APP_PORT=8080
MYSQL_PORT=3306
REDIS_PORT=6379
PHPMYADMIN_PORT=8081
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# Database Configuration
DB_DATABASE=laravel_db
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_password
DB_ROOT_PASSWORD=root_password

# Application Configuration
APP_URL=http://localhost:8080
APP_ENV=local
APP_DEBUG=true

# Optional: Custom domain (leave empty for localhost)
CUSTOM_DOMAIN=

# Optional: SSL Configuration (set to true to enable)
SSL_ENABLED=false 